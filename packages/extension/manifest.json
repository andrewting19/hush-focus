{
  "manifest_version": 3,
  "name": "Claude Blocker",
  "version": "0.0.3",
  "description": "Block distracting websites unless Claude Code is actively running inference",
  "homepage_url": "https://github.com/t3-content/claude-blocker",
  "minimum_chrome_version": "116",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": ["storage", "tabs", "sidePanel"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "service-worker.global.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.global.js"],
      "run_at": "document_start"
    }
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "Claude Blocker",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png"
    }
  }
}
